# Rho Grammar

program          ::=   stmtlist

idchain          ::=   ID   [ '.' ID ]+
idlist           ::=   ID   [ ',' ID ]+
exprlist         ::=   expr [ ',' expr ]+

assign           ::=   idlist  [ op ] '=' exprlist
index            ::=   idchain '[' expr ']'
call             ::=   idchain '(' exprlist ')'
incdec           ::=   idchain ( '++' | '--' )

expr             ::=   uexpr  op  expr
uexpr            ::=   number       |
                       assign       |
                       index        |
                       call         | 
                       'uop'  expr  | 
                       '(' expr ')' |
                       ifexpr       |
                       forexpr      |
                       switchexpr

uop              ::=   '!'  | '~'
op               ::=   '+'  | '-'  | '*'  | '/'  | '%'  | '**' | '&' |
                       '|'  | '^'  | '&&' | '||' | '<<' | '>>' | '<' |
                       '>'  | '<=' | '>=' | '==' | '!=' | '??'

ifexpr           ::=   'if' expr block [ 'else' block ]
forexpr          ::=   cforexpr | iteration
switchexpr       ::=   'switch' expr '{' caselist '}'
caselist         ::=   ( 'default' ':' block ) | [ 'case' expr ':' block ]+
cforexpr         ::=   'for' assign ';' expr ';' expr block
iteration        ::=   # TODO

block            ::=   '{' stmtlist '}'
stmtlist         ::=   stmt+      EOT
stmt             ::=   vardecl    |
                       fndecl     |
                       structdecl |
                       ifacedecl  |
                       expr

vardecl          ::=   'var'    arglist
fndecl           ::=   'fn'     [ ID '.' ]  proto block
structdecl       ::=   'struct' ID '{' [ arglist+ ] '}'
ifacedecl        ::=   'iface'  ID '{' [ proto+ ] '}'

proto            ::=   ID '(' [ arglistlist ] ')' arglistlist
arglistlist      ::=   arglist [ ',' arglist ]+
arglist          ::=   idlist type

type             ::=   'int' | 'float' | 'bool' | ID
